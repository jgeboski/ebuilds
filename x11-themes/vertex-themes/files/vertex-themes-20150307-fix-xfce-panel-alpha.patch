diff --git a/Vertex-gtk/gtk-3.0/_applications.scss b/Vertex-gtk/gtk-3.0/_applications.scss
index dcdfe25..6be59b5 100644
--- a/Vertex-gtk/gtk-3.0/_applications.scss
+++ b/Vertex-gtk/gtk-3.0/_applications.scss
@@ -455,9 +455,11 @@ ClockBox {
 }
 
 // Xfce Panel
-.xfce4-panel {
+.xfce4-panel.panel {
+  background-color: #3C3E40;
+
   .button.flat {
-    background-color: #3C3E40;
+    background-color: transparentize(#3C3E40, 1);
     border-radius: 0;
 
     text-shadow: 0 -1px nth($_light_text_icon_shadow, 2);
