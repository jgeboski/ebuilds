   color: #F3F3F5;
   text-shadow: 0 -1px rgba(0, 0, 0, 0.7); }
 
-.xfce4-panel .button.flat {
-  background-color: #3C3E40;
-  border-radius: 0;
-  text-shadow: 0 -1px rgba(0, 0, 0, 0.7);
-  icon-shadow: 0 -1px rgba(0, 0, 0, 0.7); }
-  .xfce4-panel .button.flat:hover {
-    color: #F3F3F5;
-    outline-color: rgba(243, 243, 245, 0.3);
-    background-image: linear-gradient(to bottom, #5e6064, #393A3B);
-    text-shadow: 0 1px rgba(0, 0, 0, 0.7);
-    icon-shadow: 0 1px rgba(0, 0, 0, 0.7);
-    border-image: -gtk-scaled(url("borders/button-normal-border-dark.png"), url("borders/button-normal-border-dark@2.png")) 2 2 3 2/2px 2px 3px 2px stretch;
-    border-radius: 2px;
-    border-width: 1px 1px 2px 1px;
-    border-style: solid;
-    border-color: transparent;
-    border-radius: 0; }
-  .xfce4-panel .button.flat:active, .xfce4-panel .button.flat:checked {
-    color: #ffffff;
-    outline-color: rgba(255, 255, 255, 0.3);
-    background-image: linear-gradient(to bottom, #242525, #37383A);
-    text-shadow: 0 -1px rgba(0, 0, 0, 0.4);
-    icon-shadow: 0 -1px rgba(0, 0, 0, 0.4);
-    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2);
-    border-image: -gtk-scaled(url("borders/button-active-border-dark.png"), url("borders/button-active-border-dark@2.png")) 2 2 3 2/2px 2px 3px 2px stretch;
-    border-radius: 2px;
-    border-width: 1px 1px 2px 1px;
-    border-style: solid;
-    border-color: transparent;
-    border-radius: 0; }
+.xfce4-panel.panel {
+  background-color: #3C3E40; }
+  .xfce4-panel.panel .button.flat {
+    background-color: rgba(60, 62, 64, 0);
+    border-radius: 0;
+    text-shadow: 0 -1px rgba(0, 0, 0, 0.7);
+    icon-shadow: 0 -1px rgba(0, 0, 0, 0.7); }
+    .xfce4-panel.panel .button.flat:hover {
+      color: #F3F3F5;
+      outline-color: rgba(243, 243, 245, 0.3);
+      background-image: linear-gradient(to bottom, #5e6064, #393A3B);
+      text-shadow: 0 1px rgba(0, 0, 0, 0.7);
+      icon-shadow: 0 1px rgba(0, 0, 0, 0.7);
+      border-image: -gtk-scaled(url("borders/button-normal-border-dark.png"), url("borders/button-normal-border-dark@2.png")) 2 2 3 2/2px 2px 3px 2px stretch;
+      border-radius: 2px;
+      border-width: 1px 1px 2px 1px;
+      border-style: solid;
+      border-color: transparent;
+      border-radius: 0; }
+    .xfce4-panel.panel .button.flat:active, .xfce4-panel.panel .button.flat:checked {
+      color: #ffffff;
+      outline-color: rgba(255, 255, 255, 0.3);
+      background-image: linear-gradient(to bottom, #242525, #37383A);
+      text-shadow: 0 -1px rgba(0, 0, 0, 0.4);
+      icon-shadow: 0 -1px rgba(0, 0, 0, 0.4);
+      box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2);
+      border-image: -gtk-scaled(url("borders/button-active-border-dark.png"), url("borders/button-active-border-dark@2.png")) 2 2 3 2/2px 2px 3px 2px stretch;
+      border-radius: 2px;
+      border-width: 1px 1px 2px 1px;
+      border-style: solid;
+      border-color: transparent;
+      border-radius: 0; }
 
 BirdieWidgetsTweetList * {
   background-image: none;
